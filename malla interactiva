  <script>
    const prereqs = {
      "VET-072": ["BIO-002"],
      "VET-123": ["VET-121"],
      "VET-076": ["VET-072"],
      "VET-073": ["BIO-002"],
      "VET-135": ["EST-001"],
      "VET-125": ["VET-123"],
      "VET-126": ["VET-125"],
      "VET-086": ["VET-073"],
      "VET-136": ["BIO-003"],
      "VET-124": ["VET-125"],
      "VET-127": ["VET-126"],
      "VET-089": ["VET-076"],
      "VET-132": ["VET-136"],
      "VET-131": ["VET-078"],
      "VET-090": ["VET-127"],
      "VET-129": ["VET-127"],
      "VET-091": ["VET-135"],
      "VET-138": ["VET-086", "VET-089"],
      "VET-128": ["VET-076"],
      "VET-102": ["VET-129"],
      "VET-093": ["VET-090"],
      "VET-130": ["VET-090"],
      "VET-140": ["VET-122", "VET-124", "VET-136"],
      "VET-141": ["VET-137", "VET-138"],
      "VET-105": ["VET-102", "VET-093"],
      "VET-106": ["VET-084", "VET-130"],
      "VET-103": ["VET-093"],
      "VET-101": ["VET-140"],
      "VET-142": ["VET-141", "VET-128", "VET-138"],
      "INT-COMP": ["VET-105", "VET-106"],
      "INT-MAY": ["VET-101", "VET-103"]
    };

    document.querySelectorAll(".course").forEach(course => {
      const code = course.dataset.code;
      const needs = prereqs[code];
      if (needs) course.setAttribute("data-status", "locked");
    });

    function toggleApproval(element) {
      const code = element.dataset.code;
      const approved = element.classList.toggle("approved");

      if (approved) {
        document.querySelectorAll(".course[data-status='locked']").forEach(course => {
          const c = course.dataset.code;
          const needs = prereqs[c];
          if (needs && needs.every(req => document.querySelector(`[data-code='${req}']`).classList.contains("approved"))) {
            course.removeAttribute("data-status");
          }
        });
      } else {
        Object.entries(prereqs).forEach(([c, reqs]) => {
          if (reqs.includes(code)) {
            const dependent = document.querySelector(`[data-code='${c}']`);
            if (dependent) {
              dependent.setAttribute("data-status", "locked");
              dependent.classList.remove("approved");
            }
          }
        });
      }
    }
  </script>
